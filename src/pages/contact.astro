---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
	<header>
		<h1>Contact Tommy</h1>
	</header>
	<article>
		<p>
			You can contact me via email at <a href="mailto:hi@tommyp.org">hi@tommyp.org</a> or via
			Mastodon at <a href="https://mastodon.social/@tommyp">@tommyp</a>.
		</p>
		<p>Don't spam me.</p>
	</article>
</Layout>

<style>
	header {
		padding: 0 1rem;
		border-bottom: 1px solid var(--border-color);
		background: var(--button-hover-background-color);
		color: var(--button-hover-text-color);
		display: flex;
	}

	h1 {
		font-size: var(--text-6xl);
	}

	article {
		padding: 1rem;
		max-width: 100%;
	}

	p {
		font-size: var(--text-xl);
		line-height: 1.1;
		margin-bottom: var(--margin-xl);
		text-wrap: pretty;
	}

	a {
		color: var(--text-color);
	}

	a:hover {
		color: var(--yellow-5);
		text-decoration-color: var(--text-color);
	}

	@media (min-width: 768px) {
		article {
			max-width: 70vw;
		}
	}
</style>
