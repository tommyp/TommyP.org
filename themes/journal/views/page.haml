- @articlenav = capture_haml do 
  -if @page.date
    %nav#article
      %ul
        -unless previous_post.nil?
          %li.previous
            = previous_post
        -unless next_post.nil?
          %li.next
            = next_post

%article
  ~ @page.to_html(self)

  - unless @page.articles.empty?
    %section#main.articles
      %header
        %h1= "Articles on #{@page.heading}"
      = haml :summaries, :layout => false, :locals => { :pages => @page.articles, :heading => :h3 }