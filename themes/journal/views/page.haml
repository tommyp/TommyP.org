- @articlenav = capture_haml do 
  -if @page.date
  %ul#article-nav
    %li
      = previous_post
    %li
      = next_post

%article
  ~ @page.to_html(self)

  %section.pages
    = haml :summaries, :layout => false, :locals => { :pages => @page.pages }

  - unless @page.articles.empty?
    %section.articles
      %header
        %h1= "Articles on #{@page.heading}"
      = haml :summaries, :layout => false, :locals => { :pages => @page.articles, :heading => :h3 }