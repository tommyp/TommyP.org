!!! 5
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/css/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "/postal3/javascripts/application.js", :type => "text/javascript" }
    %script{ :src => "http://use.typekit.com/chf2bwy.js", :type => "text/javascript" }
    %script
      try{Typekit.load();}catch(e){}
  %body{ :class => @body_class }
    %header
      %nav
        %ul
          %li#tommy
            %a{:title => 'Tommy Palmer', :href => '/'} Tommy Palmer
          %li
            %a{:title => 'Info', :href => '/info'} Info
          %li
            %a{:title => 'Contact', :href => '/contact'} Contact
          -if @articlenav
            = @articlenav
    %section#page
      %section#content
        = yield

        #footer
          %p
            Powered by
            %a{ :href => "http://effectif.com/nesta" } nesta

    = haml :analytics, :layout => false
