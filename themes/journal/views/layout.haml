!!! 5
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
      - else
      %meta{ "name" => "description", "content" => "Tommy Palmer is a Web Developer who works with Ruby on Rails at Rumble Labs in Belfast, Northern Ireland." }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
      - else
      %meta{ "name" => "keywords", "content" => "Tommy, Palmer, Rails, Web, Developer, HTML, CSS, Ruby, Belfast, Rumble, Labs, Blog, Article, Design"}
      
    %title
      Tommy Palmer -
      = @title
    %link{ :href => "../css/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "../css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript" }
    -if @extrahead
      = @extrahead
    %script
      try{Typekit.load();}catch(e){}
    %link{:href => "/feed", :type => "application/rss+xml", :title => "TommyP.org RSS Feed", :rel => "alternate"}
  %body
    %header
      %nav
        %ul
          %li
            %a{:title => 'Tommy Palmer', :href => '/'} Tommy Palmer
          %li
            %a{:title => 'Info', :href => '/info'} Info
      -if @articlenav
        = @articlenav
    %section#page
      %section#content
        = yield

    %footer

    = haml :analytics, :layout => false
