!!! 5
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "en", :name => "language"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    - if @description
      %meta{ "name" => "description", "content" => @description }
      - else
      %meta{ "name" => "description", "content" => "Tommy Palmer is a Web Developer who works with Ruby on Rails at Rumble Labs in Belfast, Northern Ireland." }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
      - else
      %meta{ "name" => "keywords", "content" => "Tommy, Palmer, Rails, Web, Developer, HTML, CSS, Ruby, Belfast, Rumble, Labs, Blog, Article, Design"}
      
    %title
      Tommy Palmer -
      = @title
    %link{ :href => "/css/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    -if @extrahead
      = @extrahead
    %script
      try{Typekit.load();}catch(e){}
    %link{:href => "/feed", :type => "application/rss+xml", :title => "TommyP.org RSS Feed", :rel => "alternate"}
  %body
    %header#header
      %nav
        %ul
          %li
            %a{:title => 'Tommy Palmer', :href => '/', :class => 'home'}(data-icon='H') 
              %span Tommy Palmer
          %li
            %a{:title => 'Work', :href => '/work', :class => 'info'}(data-icon='o')
              %span Work
          %li
            %a{:title => 'Info', :href => '/info', :class => 'info'}(data-icon='i')
              %span Info
      -if @articlenav
        = @articlenav
    %section#content
      = yield

